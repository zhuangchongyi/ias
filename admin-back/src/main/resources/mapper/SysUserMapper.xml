<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zcy.ias.mapper.SysUserMapper">
    <sql id="baseSql">
        select id,
               username,
               password,
               nickname,
               avatar,
               email,
               phone,
               gender,
               status,
               create_id,
               create_by,
               create_time,
               update_id,
               update_by,
               update_time,
               del_flag
        from sys_user
    </sql>

    <select id="selectUserByUserName" resultType="com.zcy.ias.entity.SysUser">
        <include refid="baseSql"/>
        where username = #{username}
    </select>

</mapper>

